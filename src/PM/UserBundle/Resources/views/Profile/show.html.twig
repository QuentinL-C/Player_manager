{# src/PM/InstalBundle/Resources/views/Profile/show.html.twig #}

{% extends "PMUserBundle::layoutPublic.html.twig" %}

{% block title %}
    Profil - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    Profil Utilisateur :
{% endblock %}
    
{% block h1_extend %}
    <a class="btn btn-lg btn-primary" href="{{ path('fos_user_profile_edit') }}" >Modifier</a>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Profil</li>
{% endblock %}    
    
{% block PMUser_body %}
    {% block fos_user_content %}
        <div class="row">
            <section class="col-lg-12">
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="alert col-lg-7 alert-success">
                        {{ flashMessage }}
                    </div>
                {% endfor %}

                {% include "PMUserBundle:Profile:show_content.html.twig" %}
            </section>
        </div>
    {% endblock fos_user_content %}
{% endblock %}