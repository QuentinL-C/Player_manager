{# src/PM/UserBundle/Resources/views/Profile/edit_content.html.twig #}
 
<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal fos_user_profile_edit" role="form">
    {% if not form.vars.valid %}
    <div class="alert alert-error">
        <strong>Votre formulaire contient les erreurs suivantes :</strong>
        {{ form_errors(form) }}
        {{ form_errors(form.name) }}
        {{ form_errors(form.firstname) }}
        {{ form_errors(form.username) }}
        {{ form_errors(form.current_password) }}
        {{ form_errors(form.email) }}
    </div>
    <br />
    {% endif %}

    <fieldset>
        <legend>Utilisateur :</legend>

        <div class="form-group">
            {{ form_label(form.name, "Nom, Prénom :", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
            <div class="col-sm-4">
                {{ form_widget(form.name, {'attr': {'placeholder': 'Nom de l\'utilisateur', 'class': 'form-control'}}) }}
            </div>
            <div class="col-sm-4">
                {{ form_widget(form.firstname, {'attr': {'placeholder': 'Prénom', 'class': 'form-control'}}) }}
            </div>
        </div>
        
        <div class="form-group">
            {{ form_label(form.email, "Adresse mail :", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
            <div class="col-sm-8">
                {{ form_widget(form.email, {'attr': {'placeholder': 'mail@exemple.com', 'class': 'form-control'}}) }}
            </div>
        </div>
        
        <div class="form-group main-hide-div">
            {{ form_label(form.username, "Nom d'utilisateur :", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
            <div class="col-sm-8">
                {{ form_widget(form.username, {'attr': {'placeholder': 'Votre email : mail@exemple.com', 'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group main-hide-div">
            {{ form_label(form.current_password, "Mot de passe :", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
            <div class="col-sm-8">
                {{ form_widget(form.current_password, {'attr': {'placeholder': 'Mot de Passe', 'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.phone, "Téléphone :", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
            <div class="col-sm-2">
                {{ form_widget(form.phone, {'attr': {'placeholder': 'Format: 0601020304', 'class': 'form-control'}}) }}
            </div>
        </div>
    </fieldset>
          
    <fieldset class="col-md-offset-1 col-md-5">
        <legend>Autre :</legend>

        <dl class="dl-horizontal">
            <dt>Mot de Passe :</dt>
            <dd><a href="" class="btn btn-primary">Modifier</a></dd>
        </dl>
    </fieldset>
        <br />
    {{ form_rest(form) }}
    <center><input type="submit" class="btn btn-default" /></center>
</form>