{# src/PM/UserBundle/Resources/views/Profile/edit_content.html.twig #}
 
<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal fos_user_profile_edit" role="form">
    {% if not form.vars.valid %}
    <div class="alert alert-error">
        <strong>Votre formulaire contient les erreurs suivantes :</strong>
        {{ form_errors(form) }}
        {{ form_errors(form.role) }}
    </div>
    <br />
    {% endif %}

    <fieldset>
        <legend>Role :</legend>

        <div class="form-group">
            {{ form_label(form.role, "Role :", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
            <div class="col-md-6">
                {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </fieldset>

    <center><input type="submit" class="btn btn-default" /></center>
    {{ form_rest(form) }}
</form>