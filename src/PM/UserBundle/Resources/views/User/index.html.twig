{# src/PM/UserBundle/Resources/views/User/index.html.twig #}
 
{% extends "PMUserBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %} 
    
{% block h1 %}
    Accueil Utilisateur :
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Accueil</li>
{% endblock %}    
    
{% block PMUser_body %}
<div class="row">
    <section class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert col-lg-7 alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div class="well">
            <h2>Gestion Utilisateurs</h2>
            <ul>
                <li><a href="{{ path('fos_user_registration_register') }}">Ajouter un utilisateur</a></li>
                <li><a href="{{ path('pm_user_administration_list') }}">Liste des utilisateurs</a></li>
            </ul>
        </div>
    </section>
</div>
{% endblock %}