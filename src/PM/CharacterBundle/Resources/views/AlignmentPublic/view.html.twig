{# src/PM/CharacterBundle/Resources/views/AlignmentPublic/view.html.twig #}
 
{% extends "PMCharacterBundle:AlignmentPublic:layoutPublic.html.twig" %}

{% block title %}
    {{ alignment.name }} - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    {{ alignment.name }} :
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">{{alignment.name}}</li>
    <li class="active">Voir</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        {% if alignment.description is not empty %}
            <div class="well">
                {{ alignment.description|raw }}
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">Aucune description fournie pour cet alignement.</div>
        {% endif %}
    </section>
</div>
{% endblock %}