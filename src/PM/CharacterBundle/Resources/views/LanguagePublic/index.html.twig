{# src/PM/CharacterBundle/Resources/views/LanguagePublic/index.html.twig #}
 
{% extends "PMCharacterBundle:LanguagePublic:layoutPublic.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %} 
    
{% block h1 %}
    Les Langues :
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Accueil</li>
{% endblock %}    
    
{% block PM_body %}
<div class="row">
    <section class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert col-lg-7 alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div class="well">
            <h2>Les Langues</h2>
            <ul>
                <li><a href="{{ path('pm_language_public_list') }}">Liste des langues</a></li>
            </ul>
        </div>
    </section>
</div>
{% endblock %}