{# src/PM/CharacterBundle/Resources/views/SizePublic/view.html.twig #}
 
{% extends "PMCharacterBundle:SizePublic:layoutPublic.html.twig" %}

{% block title %}
    {{ size.name }} - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    {{ size.name }} :
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">{{size.name}}</li>
    <li class="active">Voir</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div class="row">
            <ul>
                <li>Modificateur de taille : {{size.modifier}}</li>
            </ul>
        </div>
    </section>
</div>
{% endblock %}