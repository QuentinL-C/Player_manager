{# src/PM/CharacterBundle/Resources/views/Size/view.html.twig #}
 
{% extends "PMCharacterBundle:Size:layoutAdmin.html.twig" %}

{% block title %}
    {{ size.name }} - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    {{ size.name }} :
{% endblock %}
    
{% block h1_extend %}
    <a class="btn btn-lg btn-primary" href="{{ path('pm_size_administration_edit', {'slug': size.slug}) }}" >Modifier</a>
    <a class="btn btn-lg btn-danger main-JS-delete" href="{{ path('pm_size_administration_delete', {'slug': size.slug}) }}" >Supprimer</a>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">{{size.name}}</li>
    <li class="active">Voir</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div class="row">
            <p>Futur blabla</p>
        </div>
    </section>
</div>
{% endblock %}