{# src/PM/CharacterBundle/Resources/views/ClassDnD/registerST.html.twig #}
 
{% extends "PMCharacterBundle:ClassDnD:layoutAdmin.html.twig" %}

{% block title %}
    Jets de Sauvegarde - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    Edition - Jets de Sauvegarde :
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('pm_classdnd_administration_view', {'slug': classDnD.slug}) }}">{{classDnD.name}}</a></li>
    <li class="active">Jets de Sauvegarde</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div class="well">
            {% include "PMCharacterBundle:ClassDnD:editST_content.html.twig" %}
        </div>
    </section>
</div>
{% endblock %}
    
{% block javascripts_block %}
    {% javascripts  '@PMCharacterBundle/Resources/public/js/editST.js'  %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
