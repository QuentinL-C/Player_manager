{# src/PM/CharacterBundle/Resources/views/Alignment/listAlignments.html.twig #}
 
{% extends "PMCharacterBundle:Alignment:layoutAdmin.html.twig" %}

{% block title %}
    Liste - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    Liste des Alignements :
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Liste</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <table class="table table-striped" style="width: 100%">
            <tr>
                <th style="max-width: 30px;">#</th>
                <th style="text-align: left;">Nom</th>
            </tr>
            {% for alignment in listAlignments %}
                <tr>
                    <td style="text-align: left;">{{ loop.index }}</td>
                    <td style="text-align: left;"><a href="{{ path('pm_alignment_administration_view', { 'slug' : alignment.slug} ) }}">{{ alignment.name }}</a></td>
                </tr>
            {% endfor %}
            {% if listAlignments is empty %}
                <tr>
                    <td colspan="5" style="text-align: center; font-weight: bold;">Aucun alignement connu.</td>
                </tr>
            {% endif %}
        </table>
    </section>
</div>
{% endblock %}