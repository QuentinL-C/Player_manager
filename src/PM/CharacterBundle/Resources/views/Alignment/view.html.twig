{# src/PM/CharacterBundle/Resources/views/Alignment/view.html.twig #}
 
{% extends "PMCharacterBundle:Alignment:layoutAdmin.html.twig" %}

{% block title %}
    {{ alignment.name }} - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    {{ alignment.name }} :
{% endblock %}
    
{% block h1_extend %}
    <a class="btn btn-lg btn-primary" href="{{ path('pm_alignment_administration_edit', {'slug': alignment.slug}) }}" >Modifier</a>
    <a class="btn btn-lg btn-danger main-JS-delete" href="{{ path('pm_alignment_administration_delete', {'slug': alignment.slug}) }}" >Supprimer</a>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Voir</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        {% if alignment.description is not empty %}
            <div class="well">
                {{ alignment.description|raw }}
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">Aucune description fournie pour cet alignement.</div>
        {% endif %}
    </section>
</div>
{% endblock %}