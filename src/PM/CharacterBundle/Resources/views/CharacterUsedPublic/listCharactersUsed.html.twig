{# src/PM/CharacterBundle/Resources/views/CharacterUsedPublic/listCharacterUsed.html.twig #}
 
{% extends "PMCharacterBundle:CharacterUsedPublic:layoutPublic.html.twig" %}

{% block title %}
    Liste - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    Mes Personnages :
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Liste</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <table class="table table-striped" style="width: 100%">
            <caption>Liste de mes Personnages</caption>
            <tr>
                <th style="max-width: 30px;">#</th>
                <th style="text-align: left;">Nom</th>
            </tr>
            {% for characterused in listCharactersUsed %}
                <tr>
                    <td style="text-align: left;">{{ loop.index }}</td>
                    <td style="text-align: left;"><a href="{{ path('pm_characterused_public_view', { 'slug' : characterused.slug} ) }}">{{ characterused.name }}</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" style="text-align: center; font-weight: bold;">Oups ... Aucun personnage connu.</td>
                </tr>
            {% endfor %}
        </table>
    </section>
</div>
{% endblock %}