{# src/PM/CharacterBundle/Resources/views/CharacterUsedPublic/index.html.twig #}
 
{% extends "PMCharacterBundle:CharacterUsedPublic:layoutPublic.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %} 
    
{% block h1 %}
    Mes Personnages :
{% endblock %}
    
{% block h1_extend %}
    <a class="btn btn-lg btn-primary" href="{{ path('pm_characterused_public_insert') }}" >Nouveau</a>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Accueil</li>
{% endblock %}    
    
{% block PM_body %}
<div class="row">
    <section class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert col-lg-7 alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        {{ render(controller('PMCharacterBundle:CharacterUsedPublic:listContent')) }}
    </section>
</div>
{% endblock %}