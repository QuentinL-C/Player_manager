                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div class="well">
            <h2>Sections</h2>
            <ul>
                <li><a href="{{ path('pm_ability_public_homepage') }}">Les Caractéristiques</a></li>
                <li><a href="{{ path('pm_alignment_public_homepage') }}">Les Alignements</a></li>
                <li><a href="{{ path('pm_classdnd_public_homepage') }}">Les Classes</a></li>
                <li><a href="{{ path('pm_language_public_homepage') }}">Les Langues</a></li>
                <li><a href="{{ path('pm_level_public_homepage') }}">Les Niveaux</a></li>
                <li><a href="{{ path('pm_race_public_homepage') }}">Les Races</a></li>
                <li><a href="{{ path('pm_size_public_homepage') }}">Les Tailles</a></li>
                <li><a href="{{ path('pm_skill_public_homepage') }}">Les Compétences</a></li>
            </ul>
        </div>
    </section>
</div>
{% endblock %}