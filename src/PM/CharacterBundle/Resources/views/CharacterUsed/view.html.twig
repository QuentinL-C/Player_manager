{# src/PM/CharacterBundle/Resources/views/CharacterUsed/view.html.twig #}
 
{% extends "PMCharacterBundle:CharacterUsed:layoutAdmin.html.twig" %}

{% block title %}
    {{ characterUsed.name }} - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    {{ characterUsed.name }} :
{% endblock %}
    
{% block h1_extend %}
    <a class="btn btn-lg btn-primary" href="{{ path('pm_characterused_administration_edit', {'slug': characterUsed.slug}) }}" >Modifier</a>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Voir</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div class="row">
            <div class="col-md-6">
                <h2>Informations sur le Personnage</h2>
                
                <ul>
                    <li>Nom : {{characterUsed.name}}</li>
                    <li>Age : {% if characterUsed.age is not empty %}{{characterUsed.age}}{% else %}Aucun âge{% endif %}</li>
                    <li>Sexe : {% if characterUsed.gender is not empty %}{{characterUsed.gender}}{% else %}Aucun genre{% endif %}</li>
                    <li>Taille : {% if characterUsed.height is not empty %}{{characterUsed.height}}{% else %}Aucune taille{% endif %}</li>
                    <li>Poids : {% if characterUsed.weight is not empty %}{{characterUsed.weight}}{% else %}Aucun poids{% endif %}</li>
                    <li>PV : {{characterUsed.hpCurrent}}/{{characterUsed.hpMax}}</li>
                    <li>Level : {{characterUsed.level}}</li>
                    <li>Alignement : {% if characterUsed.alignment is not empty %}{{characterUsed.alignment.name}}{% else %}Aucun alignement{% endif %}</li>
                    <li>Classe : {{characterUsed.classDnD.name}}</li>
                    <li>Race : {{characterUsed.race.name}}</li>
                    <li>Richesse : {{characterUsed.wealth.po}}</li>
                    <li>Proprio : {{characterUsed.user.username}}</li>
                    <li>Charactéristiques :</li>
                    <ul>
                        {% for ability in abilities %}
                            {% if ability.type == 1 %}<li>Force : {{ability.value}}</li>
                            {% elseif ability.type == 2 %}<li>Dexterité : {{ability.value}}</li>
                            {% elseif ability.type == 3 %}<li>Constitution : {{ability.value}}</li>
                            {% elseif ability.type == 4 %}<li>Intelligence : {{ability.value}}</li>
                            {% elseif ability.type == 5 %}<li>Sagesse : {{ability.value}}</li>
                            {% elseif ability.type == 6 %}<li>Charisme : {{ability.value}}</li>
                            {% endif%}
                        {% endfor %}
                    </ul>
                    <li>Compétences :</li>
                </ul>
            </div>
            <div class="col-md-6">
                <h2>Histoire</h2>
                {% if characterUsed.story is not empty %}
                    <div class="well">
                        {{ characterUsed.story|raw }}
                    </div>
                {% else %}
                    <div class="alert alert-warning" role="alert">Aucune histoire fournie pour ce personnage.</div>
                {% endif %}
                
            </div>
        </div>
    </section>
</div>
{% endblock %}