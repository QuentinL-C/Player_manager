{# src/PM/CharacterBundle/Resources/views/CharacterUsed/view_home.html.twig #}
<div class="row">
    <div class="col-md-6">
        <table class="table table-bordered table-hover">
            <caption>Caractéristiques :</caption>
            <thead>
                <tr>
                    <th>Caractéristiques</th>
                    <th>Mod.</th>
                    <th>Détail</th>
                </tr>
            </thead>
            {% for ability in abilities %}
                {% if loop.index == 1 %}<tr><th>Force</th><td>{% if ability >= 0%}+{% endif %}{{ability}}</td></tr>
                {% elseif loop.index == 2 %}<tr><th>Dextérité</th><td>{% if ability >= 0%}+{% endif %}{{ability}}</td></tr>
                {% elseif loop.index == 3 %}<tr><th>Constitution</th><td>{% if ability >= 0%}+{% endif %}{{ability}}</td></tr>
                {% elseif loop.index == 4 %}<tr><th>Intelligence</th><td>{% if ability >= 0%}+{% endif %}{{ability}}</td></tr>
                {% elseif loop.index == 5 %}<tr><th>Sagesse</th><td>{% if ability >= 0%}+{% endif %}{{ability}}</td></tr>
                {% elseif loop.index == 6 %}<tr><th>Charisme</th><td>{% if ability >= 0%}+{% endif %}{{ability}}</td></tr>
                {% endif %}
            {% endfor %}
        </table>
    </div>
        
    <div class="col-md-6">
        BBA : 
        {% for bab in babs %}
            {{bab.value}}
        {% endfor %}<br />
        Mod. Lutte :
        {% for grappleModifier in grappleModifiers %}
            {{grappleModifier}}
        {% endfor %}<br />
        CA : {{ac}}<br />
        CA de Contact : {{touchAC}}<br />
        CA de pris au dépourvu : {{fFAC}}<br />
        Vitesse : {{speed}}<br />
        Initiative : {{initiative}}<br />
        <table class="table table-bordered">
            <caption>Jets de Sauvegarde</caption>
            <tr>
                <td>Réflex</td>
                <td>{{fortitude}}</td>
            </tr>
            <tr>
                <td>Vigueur</td>
                <td>{{reflex}}</td>
            </tr>
            <tr>
                <td>Volonté</td>
                <td>{{will}}</td>
            </tr>
        </table>
    </div>
</div>