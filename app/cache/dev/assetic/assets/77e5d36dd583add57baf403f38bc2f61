$(document).ready(function() {
    var container = $('div#form_babs');
                    $('div#form_babs').prev().hide();
                     
    var addLink = $('<a href="#" id="add_babs" class="btn btn-default">Ajouter un BAB</a>');

    container.append(addLink);
    
    addLink.click(function(e) {
        addBab(container);
        e.preventDefault(); // évite qu'un # apparaisse dans l'URL
        return false;
    });

    var index = container.find(':input').length;
    if (index == 0) {
        addBab(container);
    } else {
        container.children('div').each(function() {
            addDeleteLink($(this));
        });
    }

    function addBab(container) {
        var prototype = $(container.attr('data-prototype').replace(/__name__label__/g, 'BAB n°' + (index+1))
            .replace(/__name__/g, index));
        addDeleteLink(index, prototype);
        container.append(prototype);
        
        var div_classdndinstances_X = $('div#form_babs_' + index),
            select_class = $('select#form_babs_' + index + '_classDnD').html();
        
        var new_container = '\n\
            <table class="table">\n\
                <tr>\n\
                    <td>\n\
                        <label class="required" for="form_babs_' + index + '_classDnD">Classe :</label>\n\
                        <select id="form_bas_' + index + '_classDnD" required="required" name="form[babs][' + index + '][classDnD]">\n\
                            ' + select_class + '\n\
                        </select>\n\
                    </td>\n\
                    <td>\n\
                        <label class="required" for="form_babs_' + index + '_lvl">Niveau :</label>\n\
                        <input id="form_babs_' + index + '_lvl" required="required" name="form[babs][' + index + '][lvl]"></input>\n\
                    </td>\n\
                    <td>\n\
                        <label class="required" for="form_babs_' + index + '_attackNb">Nb° Attaque :</label>\n\
                        <input id="form_babs_' + index + '_attackNb" required="required" name="form[babs][' + index + '][attackNb]"></input>\n\
                    </td>\n\
                    <td>\n\
                        <label class="required" for="form_babs_' + index + '_value">Valeur :</label>\n\
                        <input id="form_babs_' + index + '_value" required="required" name="form[babs][' + index + '][value]"></input>\n\
                    </td>\n\
                    <td id="delete_link_' + index + '"></td>\n\
                </tr>\n\
            </table>';
        
        div_classdndinstances_X.html(new_container);
        $('div#form_babs_' + index).prev().hide();
        
        index++;
    }

    function addDeleteLink(index, prototype) {
        var deleteLink = $('<a href="#" class="btn btn-danger">Supprimer</a>');
        
        $('[id="delete_link_'+index+'"]').append(deleteLink);
        
        deleteLink.click(function(e) {
            prototype.remove();
            e.preventDefault(); // évite qu'un # apparaisse dans l'URL
            return false;
        });
    }
});